//
// FIELDS
// ======
// These lay out controls, labels and additional elements within the context
// of a form
//


.field
  margin-bottom $base--spacing

.field__question
  margin-bottom ($base--spacing / 2)
  font-size 0.9em

.field__assistance
  margin-top ($base--spacing / 2)
  color $color--gearbox-black-lightest
  font-size 0.9em

.field__feedback

  .field--error &
    color $color--error

  .field--success &
    color $color--success

  .field--notice &
    color $color--notice

  .field--warning &
    color $color--warning

label
  & > *
    pointer-events none

label a,
label button,
label .button,
label .custom-select
  pointer-events auto
